@model List<Model.CartItem>
  @{ 
        double TotalMoney = 0;
  }
    <div class="shopping-cart ml-20 display-inline">
        <a href="/Cart"><b>shopping cart</b>@Model.Count</a>
        @if (Model.Count > 0)
        {

    <ul>
        @foreach (var item in Model)
        {

            var total = (item.Product.Price * item.Quantity);
            TotalMoney += total;
            <li>
                <div class="cart-img">
                    <a href="#"><img style="width:100px;"  src="@item.Product.Images" alt="" /></a>
                </div>
                <div class="cart-content">
                    <h3><a href="#">@item.Quantity</a> </h3>
                    <span><b>@item.Product.Name</b></span>
                    <span class="cart-price">@item.Product.Price</span>
                </div>
                <div class="cart-del">
                    <a data-id="@item.Product.Id" class="btn-delete"><i class="fa fa-times-circle"></i></a>
                </div>
            </li>

        }



        <li>
            <hr class="shipping-border" />
            <div class="shipping">
                <span class="f-left"> Tổng Tiền: @TotalMoney</span>
                <span class="f-right cart-price"></span>
            </div>
        </li>
        @Html.ActionLink("Thanh Toán", "Index", "Order")
       
    </ul>
        }
        else
        {
            <ul>
                        <li>
                        <div class="cart-content">
                            <span><b>Giỏ hàng trống</b></span>
                        </div>
                    </li>
            </ul>
        }

    </div>