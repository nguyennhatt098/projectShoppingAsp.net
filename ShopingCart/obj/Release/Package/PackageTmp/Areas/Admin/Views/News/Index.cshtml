@model IEnumerable<Model.News>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


	<div class="box container">
		<h2 style="text-align:center">Quản lý tin tức</h2>
		<p>
			<a class="btn btn-primary" href="/Admin/News/Create">Tạo mới</a>
		</p>
		<div style="overflow-x:auto;" class="box-body">
			<table id="example1" class="table table-bordered table-hover">
				<thead>
					<tr>
						<th>
							@Html.DisplayNameFor(model => model.Slug)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.Images)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.Summary)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.Content)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.CreateDate)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.Status)
						</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<td>
								@Html.DisplayFor(modelItem => item.Slug)
							</td>
							<td>
								<img src="@Html.DisplayFor(modelItem => item.Images)" width="150px" />

							</td>
							<td>
								@Html.DisplayFor(modelItem => item.Summary)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.Content)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.CreateDate)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.Status)
							</td>
							<td>
								<a class="btn btn-primary" style="font-size: 10px;" href="@Url.Action("Edit", new {id = item.ID})"><i class="fa fa-fw  fa-pencil"></i></a>
								<a class="btn btn-danger" style="margin-left: 10px; font-size: 10px;" href="@Url.Action("Delete", new {id = item.ID})"><i class="fa fa-fw fa-trash"></i></a>

							</td>
						</tr>
					}
				</tbody>
			</table>
			</div>
		</div>
