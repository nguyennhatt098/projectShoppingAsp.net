@model Model.LoginModel
@{
	ViewBag.Title = "Đăng Nhập";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

	<div class="space-custom"></div>
	<div class="breadcrumb-area">
		<div class="container">
			<ol class="breadcrumb">
				<li><a href="#"><i class="fa fa-home"></i></a></li>
				<li><a href="#">Shop</a></li>
				<li class="active">Login</li>
			</ol>
		</div>
	</div>
<div class="user-login pb-60 form-register">
	<div class="container">
		<div class="row">
			<div class="centered-title text-center">
				<h2>Login</h2>
				<div class="clear"></div>
				<em>doloremque laudantium, totam rem aperiam, eaque ipsa quae ab illo <br>inventore veritatis et quasi architecto beatae</em>
			</div>
			<div class="clear"></div>
			<div  class="col-md-6 col-sm-6 col-md-offset-3 col-sm-offset-3">
				<div style="background:white;" class="row">
					<form action="#" method="post" class="login-form">
						@Html.ValidationSummary(false, "", "error")
						<p class="form-row pd-right">
							<label for="username">Username<span class="required">*</span></label>
							@Html.TextBoxFor(model => model.UserName, new { @class = "form-control form-control-user", @autofocus = "autofocus" })
						</p>
						<p class="form-row pd-left">
							<label for="password">Passwords <span class="required">*</span></label>
							@Html.PasswordFor(model => model.Password, new { @class = "form-control form-control-user" })
						</p>
						<p class="form-row ">
							<input type="submit" value="Login" name="login" class="theme-button marL0">
							<label class="inline" for="rememberme">
								@Html.CheckBoxFor(model => model.RememberMe)
							</label>
						</p>
						<p class="lost_password">
                            @Html.ActionLink("Quên Mật Khẩu ?","ForgotPassWord","Login")
						</p>
					</form>
				</div>
			</div>
			<!-- /.col-md-6 -->
		</div>
		<!-- /.row -->
	</div>
	<!-- /.container -->
</div>
<!-- #content -->
<!-- login-area end -->
<!-- service-area start -->


