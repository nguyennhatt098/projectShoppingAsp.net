@model IEnumerable<Model.Slider>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}



<div class="box container">
    <div class="box-header">
        <h2 style="text-align:center">Quản lý Slider</h2>
        <p>
            <a class="btn btn-primary" href="@Url.Action("Create")">Tạo mới</a>
        </p>
    </div>

    <div style="overflow-x:auto;" class="box-body">
        <table id="example1" class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Images)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DisplayOrder)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Link)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                   
                    <th>
                        @Html.DisplayNameFor(model => model.Created)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ModifileDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    var createdDate = item.Created != null ? item.Created.Value.ToString("dd/MM/yyyy") : "";
                    var updatedDate = item.ModifileDate != null ? item.ModifileDate.Value.ToString("dd/MM/yyyy") : "";
                    <tr>
                        <td>
                            <img style="width:100px; height: 50px;" src="@Html.DisplayFor(modelItem => item.Images)" alt="Alternate Text" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DisplayOrder)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Link)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                       
                        <td>
                            @createdDate
                        </td>
                        <td>
                            @updatedDate
                        </td>
                        <td>
                            @if (item.Status)
                            {
                                <span class="label label-success">Hiện</span>
                            }
                            else
                            {
                                <span class="label label-danger">Ẩn</span>
                            }
                        </td>
                        <td>
                            <a class="btn btn-primary" style="font-size:10px;" href="@Url.Action("Edit", new { id=item.ID })"><i class="fa fa-fw  fa-pencil"></i></a>
                            <a class="btn btn-danger" style="margin-left:10px;font-size:10px;" href="@Url.Action("Delete", new { id=item.ID })"><i class="fa fa-fw fa-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
